%silk(version:1.0, type:schema)

module org.utgenome

# coordinate system information
class Coordinate
  :group = "utgb"
  :species 
  :revision
  :name
end

# region on a genome sequence
class Locus
  :id 
  integer :start, :end 

  index interval :start, :end
  index keyword :id
end

# gene data with sequence data
class Gene < Locus
  sequence :sequence 
  Exon* :exon
  CDS* :cds
end

class Exon < Locus
end

class CDS < Locus
end

# reference sequence
class Reference < Locus
  Coordinate :coodinate
  sequence :sequence 
end

# short-read data
class Read 
  includes Locus
  string :sequence 
  integer* :qv 
end 


# Alignment of reads to a reference genome
relation Alignment
  Reference :reference
  Read* :read 
end


end 
