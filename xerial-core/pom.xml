<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>xerial-base</artifactId>
    <groupId>org.xerial</groupId>
    <version>2.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.xerial</groupId>
  <artifactId>xerial-core</artifactId>
  <name>Xerial Core</name>
  <version>0.6.1-SNAPSHOT</version>
  <description>Xerial Core: standard utilities for XerialJ project</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/java</directory>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <includes>
            <include>**</include>
          </includes>
          <testIncludes>
            <include>**</include>
          </testIncludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.xerial.maven</groupId>
        <artifactId>maven-antlr-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>xerial</id>
      <name>Xerial Artifact Repository</name>
      <url>http://maven.xerial.org/repository/artifact</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.xerial.thirdparty</groupId>
      <artifactId>org.antlr.antlr2</artifactId>
      <version>2.7.7</version>
    </dependency>
    <dependency>
      <groupId>org.xerial.thirdparty</groupId>
      <artifactId>org.antlr.stringtemplate</artifactId>
      <version>3.1b1</version>
    </dependency>
    <dependency>
      <groupId>org.xerial.thirdparty</groupId>
      <artifactId>org.antlr.antlr3</artifactId>
      <version>3.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.xerial.thirdparty</groupId>
      <artifactId>org.antlr.antlr-runtime</artifactId>
      <version>3.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.xerial.thirdparty</groupId>
      <artifactId>org.xmlpull.xpp</artifactId>
      <version>1.1.3.4.K</version>
    </dependency>
  </dependencies>
  <distributionManagement>
    <site>
      <id>xerial.dav</id>
      <url>dav:http://maven.xerial.org/repository/site/${project.artifactId}</url>
    </site>
  </distributionManagement>
</project>